<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/PrimaryLight</item>
        <item name="colorPrimaryDark">@color/PrimaryLight</item>
        <item name="colorAccent">@color/PrimaryLight</item>
        <item name="android:colorBackground">@color/PrimaryText</item>
        <item name="android:colorForeground">@color/PrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/PrimaryText</item>
        <item name="android:textColorSecondary">@color/PrimaryText</item>
        <item name="android:textColorSecondaryInverse">@color/PrimaryText</item>
        <item name="android:textColorPrimary">@color/PrimaryDark</item>
        <item name="android:windowBackground">@color/PrimaryText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="checkBoxStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/PrimaryText</item>
        <item name="android:textColorSecondary">@color/PrimaryText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ritsTheme" parent="AppTheme" />

</resources>
